#: import wb webbrowser
#: import ur urls
<MenuScreen>:
	name: 'menu'
	NavigationLayout:
		ScreenManager:
			Screen:
				BoxLayout:
					orientation: 'vertical'			  
					MDToolbar:
						title: 'LANGUAGES'
						type: 'top'
						left_action_items: [['menu',lambda x: nav.set_state('open')]]
						elevation:5
					BoxLayout :
						orientation: 'vertical'				
						ScrollView:
							MDGridLayout:
								cols: 1
								adaptive_height: True
								padding: dp(4), dp(4)
								spacing: dp(4)
						
								SmartTileWithLabel:
									size_hint_y:None
									height:1000
									source: "alphaimg/english.png"
									text:"[size=100]English[/size]"
									on_release:
										app.back='profile1'
										root.manager.current="profile1"						
								SmartTileWithLabel:
									size_hint_y:None
									height:1000
									source: "alphaimg/hindi.png"
									text:"[size=100]Hindi[/size]"
									on_release:
										app.back='profile2'
										root.manager.current="profile2"
								SmartTileWithLabel:
									size_hint_y:None
									height:1000
									source: "alphaimg/oth.png"
									text:"[size=100]Other[/size]"
									on_release:
										app.back='profile3'
										root.manager.current="profile3"
		MDNavigationDrawer:
			id:nav
			BoxLayout:
				orientation:'vertical'
				Image:
					size_hint:1,.2
					source:'alphaimg/m.png'
				MDTextButton:
					markup: True
					size_hint:1, None
					size: self.texture_size
					text:'MUSIC'
					on_release:
						wb.open(ur.kivy)
				MDSeparator:
					
					
				BoxLayout:
					orientation:'vertical'
					size_hint:1,.8
					ScrollView:
						MDList:
							OneLineIconListItem:
								IconLeftWidget:
									icon:'github-face'
							OneLineIconListItem:
								IconLeftWidget:
									icon:'instagram'
							OneLineIconListItem:
								IconLeftWidget:
									icon:'language-python'
							OneLineIconListItem:
								IconLeftWidget:
									icon:'kivy'
							OneLineIconListItem:
								IconLeftWidget:
									icon:'more'
						