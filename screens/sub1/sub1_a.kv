<subscreenone>
	name: 'sub1_a'
	NavigationLayout:
		ScreenManager:
			Screen:
				BoxLayout:
					orientation: 'vertical'
					MDToolbar:
						title: app.tit
						left_action_items: [["arrow-left",lambda x:  root.ch_sc(app.back)]]
					BoxLayout:
						orientation: 'vertical'
						ScrollView:
							GridLayout:
								id:g
								halign:'left'
								padding: 25
								spacing: 100
								cols:1
								height: self.minimum_height
								size_hint_y: None
								FloatLayout:
									id:f
									orientation:'vertical'
									size_hint_y: None
									size: root.width,root.height/3
									MDCard:
										elevation:7
										pos_hint: {'center_x': .5, 'center_y': .5}				
										size_hint: None,None
										size: root.width-50,(root.height/3)+70
										SmartTile:
											box_color:0,0,0,0
											on_release:
												print("tile released")
											Image:
												pos_hint: {'center_x': .5, 'center_y': .5}
												#user_font_size: "128sp"
												#size: 500,500
												source:app.imag
								
									MDIconButton:
										pos:root.width*(5/10),g.height-(f.height+380)
										md_bg_color:0,0,0,0
										#size_hint:.2,.35
										on_release:
											if self.icon == 'pause-circle':self.icon='play-circle';app.stp()
											else: self.icon='pause-circle';app.pla(app.music)
											
										icon:"play-circle"
										user_font_size: "64sp"
										theme_text_color: "Custom"
										text_color:0,.5,.7,1
									
								
								MDLabel:
									markup: True
									size_hint:1, None
									size: self.texture_size
									text:app.lyrics