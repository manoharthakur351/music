<subscreenone>
	name: 'sub1_a'
	NavigationLayout:
		ScreenManager:
			Screen:
				BoxLayout:
					orientation: 'vertical'
					MDToolbar:
						title: app.one_item[0]
						left_action_items: [["arrow-left",lambda x:  root.ch_sc(app.back)]]
					BoxLayout:
						orientation: 'vertical'
						ScrollView:
							GridLayout:
								id:g
								halign:'left'
								padding: 25
								spacing: 50
								cols:1
								height: self.minimum_height
								size_hint_y: None
								FloatLayout:
									id:f
									orientation:'vertical'
									size_hint_y: None
									size: root.width,(root.height/3)+90
									MDCard:
										elevation:7
										pos_hint: {'center_x': .5, 'center_y': .5}				
										size_hint: None,None
										size: root.width-50,(root.height/3)+70
										SmartTile:
											box_color:0,0,0,0
											on_release:
												print("tile released")
											Image:
												pos_hint: {'center_x': .5, 'center_y': .5}
												#user_font_size: "128sp"
												#size: 500,500
												source:'alphaimg/thumbnail.jpeg'
								
								MDBoxLayout:
									spacing:25
									padding:50
									orientation: 'vertical'
									size_hint:1,None
									adaptive_height: True
									pos_hint: {'center_x': .5, 'center_y': .5}
									MDProgressBar:
										id: progress
										value:10
										opacity:1
										type: "determinate"
									    running_duration: 1
									    catching_duration: 1.5
									MDIconButton:
										id:pp
										size_hint:None,None
										height:100
										size: self.width,50
										pos_hint: {'center_x': .5, 'center_y': .5}
										pos:root.width*(5/10),g.height-(f.height+380)
										on_release:
											if self.icon == 'alphaimg/pause.png':self.icon='alphaimg/play.png';app.stp(); progress.value=0
											else: self.icon='alphaimg/pause.png';app.pla(app.one_item[3]);progress.value=50
										icon:"alphaimg/play.png"
										user_font_size: "16sp"
										theme_text_color: "Custom"
										text_color:1,.5,.7,1
									
								
								MDLabel:
									markup: True
									size_hint:1, None
									size: self.texture_size
									text:app.textit(app.one_item[4])